{
  "manifest_version": 3,
  "name": "README.md Generator",
  "version": "1.0",
  "description": "Generate a README.md file based on user input.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon32.png",
      "128": "icons/icon48.png"
    }
  },
  "permissions": [
    "storage"
  ]
}
